<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.contrib.ldap</groupId>
    <artifactId>ldap</artifactId>
    <version>9.5.7-SNAPSHOT</version>
  </parent>
  <artifactId>ldap-user-cleanup</artifactId>
  <packaging>xar</packaging>
  <name>LDAP - remove old users utility</name>
  <version>9.5.7-SNAPSHOT</version>
  <description>In case users get deleted from LDAP, this application removes their XWiki profile pages and transfers ownership of their pages to an anonymous account.</description>
  <properties>
    <xwiki.extension.name>Removes old users no longer in LDAP</xwiki.extension.name>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.xwiki.contrib.ldap</groupId>
      <artifactId>ldap-api</artifactId>
      <version>${project.version}</version>
      <scope>runtime</scope>
    </dependency>
    <!-- The Groovy Macro is used in this application's wiki pages -->
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-rendering-macro-groovy</artifactId>
      <version>${platform.version}</version>
      <scope>runtime</scope>
    </dependency>
    <!-- The Velocity Macro is used in this application's wiki pages -->
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-rendering-macro-velocity</artifactId>
      <version>${platform.version}</version>
      <scope>runtime</scope>
    </dependency>
    <!-- The HTML Macro is used in this application's wiki pages -->
    <dependency>
      <groupId>org.xwiki.rendering</groupId>
      <artifactId>xwiki-rendering-macro-html</artifactId>
      <version>${rendering.version}</version>
      <scope>runtime</scope>
    </dependency>
    <!-- The Scheduler class is used in this application's wiki pages -->
    <dependency>
      <groupId>org.xwiki.platform</groupId>
      <artifactId>xwiki-platform-scheduler-api</artifactId>
      <version>${platform.version}</version>
      <scope>runtime</scope>
    </dependency>
  </dependencies>

</project>
